@model LoginModel
<div class="login-form">
    <form class="form-signin" action="@Url.Action("Login", new { ReturnUrl=Model.ReturnUrl })" method="post">
        <div class="avatar"><i class="far fa-user"></i></div>
        <h4 class="modal-title">Login to Your Account @User.Identity.Name</h4>
        <div class="form-group">
            <input type="text" asp-for="Username" class="form-control" placeholder="Username" required autofocus />
        </div>
        <div class="form-group">
            <input asp-for="Password" class="form-control" placeholder="Password" required />
        </div>
        <div class="form-group small clearfix">
            <label class="checkbox-inline"><input type="checkbox"> Remember me</label>
            <a href="#" class="forgot-link">Forgot Password?</a>
        </div>
        <input type="submit" class="btn btn-primary btn-block btn-lg" value="Login" />
        <input asp-for="Token" type="hidden" />
    </form>
    <!-- <div class="text-center small">Don't have an account? <a href="#">Sign up</a></div> -->
    <div>@Html.ValidationSummary()</div>
</div>
